{
  "name": "pro-chat",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "node ./node_modules/concurrently/dist/bin/concurrently.js -k \"npm --prefix apps/api run dev\" \"npm run dev:ui\"",
    "dev:ui": "node ./node_modules/wait-on/bin/wait-on http://localhost:8787/api/health && npm --prefix apps/desktop run dev",
    "build": "npm run build -w apps/api && npm run build -w apps/desktop",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "node node_modules/typescript/lib/tsc.js -b",
    "test": "node node_modules/vitest/vitest.mjs run",
    "test:watch": "node node_modules/vitest/vitest.mjs",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "wait-on": "^7.2.0",
    "prettier": "^3.2.5",
    "jsdom": "^24.1.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
