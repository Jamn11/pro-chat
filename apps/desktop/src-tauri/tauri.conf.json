{
  "$schema": "https://schema.tauri.app/config/2.9.5",
  "productName": "pro-chat",
  "version": "0.1.0",
  "identifier": "com.prochat.desktop",
  "build": {
    "beforeDevCommand": "npm --prefix ../.. run dev",
    "beforeBuildCommand": "bash ../../scripts/prepare-tauri.sh && VITE_API_BASE=http://127.0.0.1:8787 npm --prefix ../.. run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pro-chat",
        "width": 1200,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../api": "api",
      "../../../node_modules": "node_modules",
      "bin/node": "bin/node"
    }
  }
}
