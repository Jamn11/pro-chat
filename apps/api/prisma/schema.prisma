generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                   String       @id @default(cuid())
  localUserKey         String?      @unique
  email                String?      @unique
  firstName            String?
  lastName             String?
  imageUrl             String?
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt
  lastSignInAt         DateTime?
  systemPrompt         String?
  openRouterApiKey     String?
  braveSearchApiKey    String?
  defaultModelId       String?
  defaultThinkingLevel String?
  enabledModelIds      String       @default("[]")
  enabledTools         String       @default("[\"web_search\",\"code_interpreter\",\"memory\"]")
  hideCostPerMessage   Boolean      @default(false)
  fontFamily           String       @default("Space Mono")
  fontSize             String       @default("medium")
  threads              ChatThread[]
}

model ChatThread {
  id              String         @id @default(cuid())
  title           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  messages        Message[]
  attachments     Attachment[]
  activeStreams   ActiveStream[]
  totalCost       Float          @default(0)
  memoryCheckedAt DateTime?      // When this thread was last analyzed for memory extraction
}

model Model {
  id                     String   @id
  label                  String
  inputCostPerToken      Float
  outputCostPerToken     Float
  supportsVision         Boolean  @default(false)
  supportsThinkingLevels Boolean  @default(false)
  isActive               Boolean  @default(true)
  messages               Message[]
}

model Message {
  id               String        @id @default(cuid())
  threadId         String
  thread           ChatThread    @relation(fields: [threadId], references: [id])
  role             String
  content          String
  modelId          String?
  model            Model?        @relation(fields: [modelId], references: [id])
  thinkingLevel    String?
  createdAt        DateTime      @default(now())
  durationMs       Int?
  promptTokens     Int?
  completionTokens Int?
  cost             Float         @default(0)
  attachments      Attachment[]
  trace            String?       // JSON-encoded trace events for debugging/inspection
  sources          String?       // JSON-encoded source references from web/search tools
}

model Attachment {
  id        String        @id @default(cuid())
  threadId  String
  thread    ChatThread    @relation(fields: [threadId], references: [id])
  messageId String?
  message   Message?      @relation(fields: [messageId], references: [id])
  filename  String
  path      String
  mimeType  String
  size      Int
  kind      String
  createdAt DateTime      @default(now())
}

model ActiveStream {
  id                 String        @id @default(cuid())
  threadId           String
  thread             ChatThread    @relation(fields: [threadId], references: [id], onDelete: Cascade)
  userMessageId      String        @unique
  assistantMessageId String?       @unique
  status             String        @default("active")
  partialContent     String        @default("")
  partialTrace       String?       // JSON-encoded trace events
  modelId            String
  thinkingLevel      String?
  startedAt          DateTime      @default(now())
  lastActivityAt     DateTime      @default(now())
  completedAt        DateTime?

  @@index([threadId])
  @@index([status, lastActivityAt])
}
