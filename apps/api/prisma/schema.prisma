generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageRole {
  user
  assistant
  system
}

enum AttachmentKind {
  image
  file
}

enum ThinkingLevel {
  low
  medium
  high
  xhigh
}

enum StreamStatus {
  active
  pending
  completed
  failed
  cancelled
}

model User {
  id           String       @id @default(cuid())
  clerkId      String       @unique
  email        String?      @unique
  firstName    String?
  lastName     String?
  imageUrl     String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  lastSignInAt DateTime?
  systemPrompt String?
  threads      ChatThread[]

  @@index([clerkId])
}

model ChatThread {
  id              String         @id @default(cuid())
  title           String?
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  userId          String
  user            User           @relation(fields: [userId], references: [id])
  messages        Message[]
  attachments     Attachment[]
  activeStreams   ActiveStream[]
  totalCost       Float          @default(0)
  memoryCheckedAt DateTime?      // When this thread was last analyzed for memory extraction
}

model Model {
  id                     String   @id
  label                  String
  inputCostPerToken      Float
  outputCostPerToken     Float
  supportsVision         Boolean  @default(false)
  supportsThinkingLevels Boolean  @default(false)
  isActive               Boolean  @default(true)
  messages               Message[]
}

model Message {
  id               String        @id @default(cuid())
  threadId         String
  thread           ChatThread    @relation(fields: [threadId], references: [id])
  role             MessageRole
  content          String
  modelId          String?
  model            Model?        @relation(fields: [modelId], references: [id])
  thinkingLevel    ThinkingLevel?
  createdAt        DateTime      @default(now())
  durationMs       Int?
  promptTokens     Int?
  completionTokens Int?
  cost             Float         @default(0)
  attachments      Attachment[]
  trace            Json?         // Trace events for debugging/inspection
  sources          Json?         // Source references from web/search tools
}

model Attachment {
  id        String        @id @default(cuid())
  threadId  String
  thread    ChatThread    @relation(fields: [threadId], references: [id])
  messageId String?
  message   Message?      @relation(fields: [messageId], references: [id])
  filename  String
  path      String
  mimeType  String
  size      Int
  kind      AttachmentKind
  createdAt DateTime      @default(now())
}

model ActiveStream {
  id                 String        @id @default(cuid())
  threadId           String
  thread             ChatThread    @relation(fields: [threadId], references: [id], onDelete: Cascade)
  userMessageId      String        @unique
  assistantMessageId String?       @unique
  status             StreamStatus  @default(active)
  partialContent     String        @default("")
  partialTrace       Json?
  modelId            String
  thinkingLevel      ThinkingLevel?
  startedAt          DateTime      @default(now())
  lastActivityAt     DateTime      @default(now())
  completedAt        DateTime?

  @@index([threadId])
  @@index([status, lastActivityAt])
}
